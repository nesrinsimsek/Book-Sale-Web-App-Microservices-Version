@model OrderViewModel

@{
    // Kullanıcının kimliğini al
    var userId = User.Identity.Name;
}

<div class="page-holder">
    <div class="container">
        <section class="py-5">
            <!-- BILLING ADDRESS-->
            <h2 class="h5 text-uppercase mb-4">SİPARİŞ DETAYLARI</h2>
            <div class="row">
                <div class="col-lg-8">
                    <form method="POST" class="register-form" id="register-form">
                        <div class="row gy-3">

                            <div class="col-lg-12">
                                <label class="form-label text-sm">Teslimat Adresi</label>
                                <input asp-for="@Model.OrderCreateDto.Address" class="form-control form-control-lg" type="text" id="address" placeholder="Adres bilgisini giriniz">
                                <input asp-for=@Model.OrderCreateDto.User_Id value=@userId hidden />
                            </div>

                         @*    <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Siparişi Onayla" />
                            </div>
 *@
                            <div class="col-lg-12 form-group">
                                <button class="btn btn-dark" type="submit">Siparişi Onayla</button>
                            </div>

                        </div>
                    </form>
                </div>
                <!-- ORDER SUMMARY-->
                <div class="col-lg-4">
                    <div class="card border-0 rounded-0 p-lg-4 bg-light">
                        <div class="card-body">
                            <h5 class="text-uppercase mb-4">Your order</h5>
                            <ul class="list-unstyled mb-0">
                                <li class="d-flex align-items-center justify-content-between"><strong class="small fw-bold">Red digital smartwatch</strong><span class="text-muted small">$250</span></li>
                                <li class="border-bottom my-2"></li>
                                <li class="d-flex align-items-center justify-content-between"><strong class="small fw-bold">Gray Nike running shoes</strong><span class="text-muted small">$351</span></li>
                                <li class="border-bottom my-2"></li>
                                <li class="d-flex align-items-center justify-content-between"><strong class="text-uppercase small fw-bold">Total</strong><span>$601</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>